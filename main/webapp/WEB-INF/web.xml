<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

   <!-- web.xml은 웹 애플리케이션의 초기 설정을 담당하며, 
        스프링 애플리케이션의 루트 애플리케이션 
        컨텍스트와 서블릿 애플리케이션 컨텍스트를 설정하는 역할을 한다 
    -->

   <!-- The definition of the Root Spring Container shared by all Servlets and Filters -->
   <!-- 공용으로 사용할 객체를 담는 컨테이너를 설정하는 파일을 지정 -->
   <context-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/spring/root-context.xml
      				</param-value>
   </context-param>
   
   <!-- Creates the Spring Container shared by all Servlets and Filters -->
   <!-- 웹 어플리케이션의 생명주기 이벤트 처리 루트 애플리케이션텍스트를 로드하는 역할 -->
   <listener>
      <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
   </listener>

   <!-- Processes application requests -->
   <servlet>
      <servlet-name>appServlet</servlet-name>
      <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
      <init-param>
         <param-name>contextConfigLocation</param-name>
         <param-value>/WEB-INF/spring/appServlet/servlet-context.xml</param-value>
      </init-param>
      <load-on-startup>1</load-on-startup>
   </servlet>
      
   <servlet-mapping>
      <servlet-name>appServlet</servlet-name>
      <url-pattern>/</url-pattern>
   </servlet-mapping>
	
	<filter>
      <filter-name>encodingFilter</filter-name>       
      <filter-class>org.springframework.web.filter.CharacterEncodingFilter
      </filter-class>
      <init-param>
         <param-name>encoding</param-name>
         <param-value>UTF-8</param-value>
      </init-param>
   </filter>
   <filter-mapping>
      <filter-name>encodingFilter</filter-name>
      <url-pattern>/*</url-pattern>
   </filter-mapping>
   
  
   
   <!-- HiddenHttpMethodFilter 설정(HTTP 메서드 사용위해) --> 
	<!-- chap14  -->
	<filter>
	   <filter-name>httpMethodFilter</filter-name>
	   <filter-class>org.springframework.web.filter.HiddenHttpMethodFilter</filter-class>
	</filter>	
	<filter-mapping>
	   <filter-name>httpMethodFilter</filter-name>
	   <servlet-name>appServlet</servlet-name>
	</filter-mapping>
	
	
	<!-- 시작페이지 설정 -->
    <welcome-file-list>
        <welcome-file>/WEB-INF/views/home.jsp</welcome-file>
    </welcome-file-list>
</web-app>